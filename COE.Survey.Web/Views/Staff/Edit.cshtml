@using COE.Common.Localization.Security
@using COE.Common.Localization;
@using Commons.Framework.Web.Mvc.Helpers
@using COE.Security.Web.Helpers

@model COE.Common.Model.CollegeStaff

@{
    ViewBag.Title = SecurityResources.EditCollegeStaff;
    ViewBag.ModuleTitle = SecurityResources.Staff;

    Layout = "~/Views/Shared/_Layout2.cshtml";
}


@using (Html.BeginForm("Edit", "Staff", FormMethod.Post, new { @class = "register-form", role = "form", id = "registerForm" }))
{
    @Html.AntiForgeryToken()
    <div class="row">

        <div class="col-md-12">
            @if (ViewBag.SuccessMessage != null && !string.IsNullOrEmpty(ViewBag.SuccessMessage))
                {
                <div class="alert alert-@ViewBag.MessageType alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>@ViewBag.SuccessMessage</strong>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-search"></i> @SecurityResources.EditCollegeStaff
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="row">
                            <div class="portlet light ">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <span class="caption-subject font-green-sharp bold uppercase">Basic Information</span>
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Name, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.NationalityID, new { @class = "control-label" })
                                            @Html.DropDownListFor(model => model.NationalityID, new SelectList(LookupsHelpers.GetNationalities(), "Value", "Text"), @StipendResources.DDL_DefaultSelect, new { @class = "form-control select2",data_placeholder = @StipendResources.DDL_DefaultSelect  })
                                            @Html.ValidationMessageFor(model => model.NationalityID, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.VisaTypeID, new { @class = "control-label" })
                                            @Html.DropDownListFor(model => model.VisaTypeID, new SelectList(LookupsHelpers.GetVisaTypes(), "Value", "Text"), @StipendResources.DDL_DefaultSelect, new { @class = "form-control select2",data_placeholder = @StipendResources.DDL_DefaultSelect  })
                                            @Html.ValidationMessageFor(model => model.VisaTypeID, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.QualificationID, new { @class = "control-label" })
                                            @Html.DropDownListFor(model => model.QualificationID, new SelectList(LookupsHelpers.GetQualifications(), "Value", "Text"), @StipendResources.DDL_DefaultSelect, new { @class = "form-control select2",data_placeholder = @StipendResources.DDL_DefaultSelect  })
                                            @Html.ValidationMessageFor(model => model.QualificationID, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.SpesializationID, new { @class = "control-label" })
                                            @Html.DropDownListFor(model => model.SpesializationID, new SelectList(LookupsHelpers.GetSpecializations(), "Value", "Text"), @StipendResources.DDL_DefaultSelect, new { @class = "form-control select2",data_placeholder = @StipendResources.DDL_DefaultSelect  })
                                            @Html.ValidationMessageFor(model => model.SpesializationID, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.LeaveReasonID, new { @class = "control-label" })
                                            @Html.DropDownListFor(model => model.LeaveReasonID, new SelectList(LookupsHelpers.GetLeaveReasons(), "Value", "Text"), @StipendResources.DDL_DefaultSelect, new { @class = "form-control select2",data_placeholder = @StipendResources.DDL_DefaultSelect  })
                                            @Html.ValidationMessageFor(model => model.LeaveReasonID, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.JobTypeID, new { @class = "control-label" })
                                            @Html.DropDownListFor(model => model.JobTypeID, new SelectList(LookupsHelpers.GetJobTypes(), "Value", "Text"), @StipendResources.DDL_DefaultSelect, new { @class = "form-control select2",data_placeholder = @StipendResources.DDL_DefaultSelect  })
                                            @Html.ValidationMessageFor(model => model.JobTypeID, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.CollegeID, new { @class = "control-label" })
                                            @Html.DropDownListFor(model => model.CollegeID, new SelectList(LookupsHelpers.GetCollegesByCurrentUser(User.Identity.Name), "Value", "Text"), @StipendResources.DDL_DefaultSelect, new { @class = "form-control select2",data_placeholder = @StipendResources.DDL_DefaultSelect  })
                                            @Html.ValidationMessageFor(model => model.CollegeID, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Gender, new { @class = "control-label" })
                                            @Html.DropDownListFor(model => model.Gender, new SelectList(LookupsHelpers.GetGenders(), "Value", "Text"), @StipendResources.DDL_DefaultSelect, new { @class = "form-control select2",data_placeholder = @StipendResources.DDL_DefaultSelect  })
                                            @Html.ValidationMessageFor(model => model.Gender, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.EffectiveDate, new { @class = "control-label" })
                                            @Html.DatePickerFor(model => model.EffectiveDate, new DatePickerSettings { DateFormat = "dd/MM/yyyy", CalendarType = CalendarType.gregorian }, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.EffectiveDate, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.LeaveDate, new { @class = "control-label" })
                                            @Html.DatePickerFor(model => model.LeaveDate, new DatePickerSettings { DateFormat = "dd/MM/yyyy", CalendarType = CalendarType.gregorian }, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.LeaveDate, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.LastQualificationDate, new { @class = "control-label" })
                                            @Html.DatePickerFor(model => model.LastQualificationDate, new DatePickerSettings { DateFormat = "dd/MM/yyyy", CalendarType = CalendarType.gregorian }, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.LastQualificationDate, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="portlet light ">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <span class="caption-subject font-green-sharp bold uppercase">Contact Information</span>
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control text-left ltr" })
                                            @Html.ValidationMessageFor(model => model.Email, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Phone, new { @class = "control-label" })
                                            @Html.TelInputFor(model => model.Phone, null, new { @class = "form-control", MaxLength = "15" })
                                            @Html.ValidationMessageFor(model => model.Phone, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="portlet light">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <span class="caption-subject font-green-sharp bold uppercase">Staff Type</span>
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.TypeID, new { @class = "control-label" })
                                            @Html.DropDownListFor(model => model.TypeID, new SelectList(LookupsHelpers.GetUserTypes(), "Value", "Text"), @StipendResources.DDL_DefaultSelect, new { @class = "form-control select2",data_placeholder = @StipendResources.DDL_DefaultSelect, @onchange = "showLevels(this.value)" })
                                            @Html.ValidationMessageFor(model => model.TypeID, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group" id="level" style="display:none;">
                                            @Html.LabelFor(model => model.LevelID, new { @class = "control-label" })
                                            @Html.DropDownListFor(model => model.LevelID, new SelectList(LookupsHelpers.GetLevels(), "Value", "Text"), @StipendResources.DDL_DefaultSelect, new { @class = "form-control select2",data_placeholder = @StipendResources.DDL_DefaultSelect })
                                            @Html.ValidationMessageFor(model => model.LevelID, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                        <div class="form-group" id="AdminTitle" style="display:none;">
                                            @Html.LabelFor(model => model.AdminTitle, new { @class = "control-label" })
                                            @Html.TextBoxFor(model => model.AdminTitle, new { @class = "form-control text-left ltr" })
                                            @Html.ValidationMessageFor(model => model.AdminTitle, string.Empty, new { @class = "text-danger help-block" })
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions right">
                        <input type="submit" value="@SharedResources.Save" class="btn btn-success" />
                        <a href="@Url.Action("Index","Staff")" class="btn btn-primary">@SharedResources.Back</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
}
@section Scripts{
    <script>
        $(document).ready(function () {
            var selectedVal = $('#TypeID').val();
            if (selectedVal == 2) {
                $('#level').show();
                $('#AdminTitle').hide();
            }
            if (selectedVal == 1) {
                $('#level').hide();
                $('#AdminTitle').show();
            }


        });
        function showLevels(typeId) {
            if (typeId == 2) {
                $('#level').show();
                $('#AdminTitle').hide();
            }
            else {
                $('#level').hide();
                $('#AdminTitle').show();
            }
        }
    </script>
}
