    <script>

        $(function () {
            LoadSurveys();
        });

        function LoadSurveys() {
            $.ajax({
                url: '@Url.Action("GetSurveys", "Surveys", new { moduleId = moduleID })',
                type: "GET",
                dataType: "JSON",
                success: function (response) {
                    if (response.Items != undefined && response.Items.length > 0) {

                        $('#liSurvyes').empty();

                        $.each(response.Items, function (i, item) {

                            var url = '';
                            if (item.Public == true) {
                                url = '@Url.Action("PublicAnswer", "Surveys")';
                            }
                            else {
                                url = '@Url.Action("Answer", "Surveys")';
                            }

                            $("#liSurvyes").append('<li><a href="' + url + '?id=' + item.Key + '"><i class="flaticon-add"></i>' + item.Value + '</a></li>');
                        });
                    }

                },
                error: function (response) {
                }
            });
        };

        $('#LogOff').click(function (event) {
            $.ajax({
                url: '@Url.Action("LogOff", "Account",new {area=string.Empty })', //'/Account/LogOff',
                type: 'POST',
                success: function (data) {
                    debugger;
                    if (data.Success) {
                        window.location.href = "/Account/Login";
                    }
                },
                error: function (request, error) {
                }
            });
        });

    </script>

