@using COE.Survey.Web.ViewModels

@model ChartsViewModel

@{
    ViewBag.Title = "Survey Result";
}


<meta name="viewport" content="width=device-width, initial-scale=1">
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.3/jspdf.min.js"></script>

<div class="row">
    <div class="col-md-12 margin-bottom-10">
        <a class="btn green" style="float:right" href="@Url.Action("Result", "Surveys", new {id = Model.SurveyId })"><i class="fa fa-th-list" aria-hidden="true"></i> Details </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-question-circle"></i> @Model.SurveyTitle
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
                </div>
            </div>
            <form class="portlet-body form">
                <!-- BEGIN FORM-->
                <div class="form-body">
                    
                    <div class="row">
                        <div class="col-md-8">
                            <h3 class="control-label">Respones : @Model.ResponsesCount</h3>
                        </div>
                        <div class="col-md-8">

                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <div id="charts">
                                @for (int i = 0; i < Model.Charts.Count; i++)
                                {
                                    @Html.Partial("PieChartResult", Model.Charts[i]);
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<script>

    $('#downloadPdf').click(function (event) {

        

    });

</script>
